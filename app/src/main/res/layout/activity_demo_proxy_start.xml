<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.adam.app.design.pattern.demo.proxy.view_model.ProxyDemoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fitsSystemWindows="true"
        tools:context=".proxy.DemoProxyStart">

        <!-- Title -->
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_demo_proxy"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp" />

        <!-- Row: Switch (use proxy) + Progress (right) -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_use_proxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={vm.useProxy}"
            android:text="@string/demo_proxy_label_use_proxy"
            android:textColor="@android:color/black"
            android:paddingStart="10dp"
            app:switchPadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            android:layout_margin="10dp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{vm.loading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBaseline_toBaselineOf="@id/switch_use_proxy"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Instruction -->
        <TextView
            android:id="@+id/txt_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:padding="8dp"
            android:text="@string/demo_proxy_description"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch_use_proxy"
            android:layout_margin="10dp" />

        <!-- Play -->
        <Button
            android:id="@+id/btn_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.onPlayClicked()}"
            android:text="@string/btn_demo_proxy_start_demo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_instruction"
            android:layout_margin="10dp" />

        <!-- Clear -->
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.onClearClicked()}"
            android:text="@string/demo_proxy_btn_clear_log"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_play"
            android:layout_margin="10dp" />

        <!-- Logs -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_logs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:items="@{vm.logs}"
            app:layout_constraintTop_toBottomOf="@id/btn_clear"
            app:layout_constraintBottom_toTopOf="@id/txt_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:text="@{vm.statusText}"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/recycler_logs"
            app:layout_constraintBottom_toTopOf="@id/btn_back_to_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"/>

        <!-- Back -->
        <Button
            android:id="@+id/btn_back_to_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.onBackMainClicked()}"
            android:text="@string/btn_back_to_main_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin ="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
