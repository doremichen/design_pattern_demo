<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="vm"
            type="com.adam.app.design.pattern.demo.decorator.viewmodel.DecoratorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fitsSystemWindows="true"
        tools:context=".decorator.DemoDecoratorStart">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_demo_decorator"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/txt_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/demo_decorator_chb_add_milk"
                    android:checked="@={vm.mAddMilk}"
                    android:paddingStart="12dp"
                    android:onClick="@{(v) -> vm.calculateOrder(v.context)}"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/demo_decorator_chb_add_sugar"
                    android:checked="@={vm.mAddSugar}"
                    android:paddingStart="12dp"
                    android:onClick="@{(v) -> vm.calculateOrder(v.context)}"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/demo_decorator_chb_add_vanilla"
                    android:checked="@={vm.mAddVanilla}"
                    android:paddingStart="12dp"
                    android:onClick="@{(v) -> vm.calculateOrder(v.context)}"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#FFFDE7"
            app:cardCornerRadius="16dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_selection"
            app:layout_constraintBottom_toTopOf="@id/btn_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_decorator_receipt"
                    android:textStyle="bold"
                    android:letterSpacing="0.3"
                    android:textColor="#BCAA00"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{vm.description}"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="8dp"
                    android:fontFamily="serif"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/demo_decorator_total_amount"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#212121"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{"$" + vm.totalCost}'
                        android:textColor="#2E7D32"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/btn_back_to_main_list"
            android:onClick="@{() -> vm.onBackToMainList()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>